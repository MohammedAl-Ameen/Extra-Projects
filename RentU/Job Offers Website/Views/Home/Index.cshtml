@model IEnumerable<Job_Offers_Website.Models.Category>
@{
    ViewBag.Title = "Home Page";
}



<section id="hero" class="d-flex align-items-center">

    <div class="container aos-init aos-animate" data-aos="zoom-out" data-aos-delay="100">
        <div class="row">
            <div class="col-xl-6">
                <h1>Welcome to URent</h1>
                <h2>You can find more Items to Rent and more!</h2>
                <a href="#about" class="btn-get-started scrollto">Shop Now</a>
            </div>
        </div>
    </div>

</section>







<section id="services" class="services section-bg ">

    @foreach (var item in Model)
    {




        <div class="container aos-init aos-animate" data-aos="fade-up">

            <div class="section-title">
                <h2>@Html.DisplayFor(modelItem => item.CategoryName)</h2>
                <p>@Html.DisplayFor(modelItem => item.CategoryDescription)</p>
            </div>

            <div class="row">
                @foreach (var subItem in item.Jobs)
                {
                    <div class="col-md-6 mt-4 mt-md-0 card-continer">
                        <img src="~/Uploads/@subItem.JobImage" />
                        <div class="icon-box aos-init aos-animate" data-aos="fade-up" data-aos-delay="400">
                            <i class="bi bi-binoculars"></i>
                            <h4>@Html.DisplayFor(modelItem => subItem.JobTitle)</h4>
                            <p><h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subItem.JobContent).ToString()))</h5></p>
                            @Html.ActionLink("Details", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-primary" })
                        </div>
                    </div>

                }
            </div>

        </div>

    }
</section>





